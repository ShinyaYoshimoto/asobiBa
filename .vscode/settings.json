{
  "workbench.colorCustomizations": {
    "titleBar.activeBackground": "#00cc96",
    "titleBar.activeForeground": "#ffffff",
    "titleBar.inactiveBackground": "#00cc96",
    "titleBar.inactiveForeground": "#ffffff"
  },
  "editor.formatOnSave": true, // ファイル保存時の自動フォーマット有効
  "editor.formatOnPaste": true, // ペーストした文字の自動フォーマット有効
  "editor.formatOnType": true, // 文字入力行の自動フォーマット有効
  "editor.defaultFormatter": "biomejs.biome", // デフォルトフォーマッターをBiomeに指定
  "editor.codeActionsOnSave": {
    "quickfix.biome": "explicit",
    "source.organizeImports.biome": "explicit"
  },
  "conventionalCommits.scopes": ["mahjong hono"],
  "jest.runMode": "watch",
  "jest.rootPath": "mahjong-hono",
  "files.autoSave": "afterDelay",
  "editor.tabSize": 2,
  "editor.renderWhitespace": "all",
  "editor.cursorStyle": "line",
  "files.trimTrailingWhitespace": false
}
